<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:background="#FFFFFF">

    <!-- 상단 타이틀 (7조 스마트 보안 시스템) -->
    <TextView
        android:id="@+id/title_intrusion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/primaryColor"
        android:textColor="@color/white"
        android:padding="@dimen/padding_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 정렬 버튼 -->
    <Button
        android:id="@+id/sort_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_descending"
        android:textSize="@dimen/text_size_small"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/title_intrusion"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- "침입 기록" 제목 -->
    <TextView
        android:id="@+id/subtitle_intrusion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intrusion_record"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/rounded_rectangle_background"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/title_intrusion"
        app:layout_constraintStart_toEndOf="@id/sort_button"
        app:layout_constraintBaseline_toBaselineOf="@id/sort_button"
        android:layout_marginStart="40dp" />

    <!-- 침입 기록 리스트 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/record_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="@drawable/recycler_view_border"
        app:layout_constraintTop_toBottomOf="@id/sort_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
